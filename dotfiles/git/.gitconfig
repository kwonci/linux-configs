[user]
	email = changyoung.kwon.0729@gmail.com
	name = Changyoung Kwon
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	lga = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	lgd = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --abbrev-commit --
  	cfg-cmp = "!f() { git config user.name \"Changyoung Kwon\" && git config user.email \"kwon.changyoung@airsmed.com\"; }; f"

[core]
  compression = 0
  pager = npx git-split-diffs --color | less -RFX
  packedGitLimit = 512m 
  packedGitWindowSize = 512m 
	editor = nvim

[pack] 
  deltaCacheSize = 2047m 
  packSizeLimit = 2047m 
  windowMemory = 2047m

[init]
	defaultBranch = master
[split-diffs]
	min-line-width = 0
[credential]
	helper = store
[pull]
	rebase = true
